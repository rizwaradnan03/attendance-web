// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MONITOR
  USER
}

enum IsDeletedUser {
  ACTIVE
  INACTIVE
}

model User {
  id         String        @id @default(uuid())
  image      String?
  name       String
  username   String        @unique
  password   String
  email      String        @unique
  role       Role          @default(USER)
  token      String
  is_deleted IsDeletedUser @default(ACTIVE)

  Attendance Attendance[]
  Leave      Leave[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("user")
}

enum IsAttendance {
  PRESENT
  PENDING
  LATE
  ABSENT
}

model Attendance {
  id      String  @id @default(uuid())
  User    User?   @relation(fields: [user_id], references: [id])
  user_id String?
  image   String?

  is_attendance IsAttendance @default(PENDING)
  presented_at  DateTime?
  created_at    DateTime     @default(now())

  @@map("attendance")
}

enum LeaveReason {
  ANNUAL_LEAVE
  SICK_LEAVE
  MATERNITY_LEAVE
  PATERNITY_LEAVE
  UNPAID_LEAVE
}

enum IsAcceptedLeave {
  PENDING
  ACCEPTED
  REJECTED
}

model Leave {
  id      String      @id @default(uuid())
  User    User?       @relation(fields: [user_id], references: [id])
  user_id String?
  reason  LeaveReason
  from    DateTime
  to      DateTime

  is_accepted IsAcceptedLeave @default(PENDING)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("leave")
}
